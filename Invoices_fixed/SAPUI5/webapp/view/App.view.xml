<mvc:View controllerName="clara.SAPUI5.controller.App" 
        xmlns="sap.m" 
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:core="sap.ui.core"
        displayBlock="true">
        <Shell >
            <App id="app">
                <pages>
                    <Page title="{i18n>appTitle}">
                        <headerContent>
                            <Button id="helloDialogHeader" 
                                    icon="sap-icon://action" 
                                    press=".onOpenDialogHeader" 
                                    class="sapUiSmallMarginEnd"/>
                        </headerContent>
                        <content>
                            <mvc:XMLView viewName="clara.SAPUI5.view.HelloPanel"/>
                            <mvc:XMLView viewName="clara.SAPUI5.view.InvoicesList"/>
                        </content>
                    </Page>
                </pages>
            </App>
    </Shell>
</mvc:View>